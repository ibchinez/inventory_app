
<%= simple_form_for(@supply) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :customer_name %>
    <%= f.input :pack_size %>
    <%= f.input :batch_no %>
    <%= f.input :price_per_unit %>
    <%= f.input :quantity %>
    <%= f.input :description %>
    <%= f.input :manufacture_date, as: :date, html5: true %>
    <%= f.input :expiry_date , as: :date, html5: true%>
    <%= f.input :purchase_date , as: :date, html5: true%>
    <%= f.input :remark %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "SUBMIT" ,class: "btn btn-primary" %>
  </div>
<% end %>
