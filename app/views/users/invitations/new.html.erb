<% provide(:title, 'Add Admin')%>
<h2 style=" text-align: center; width: 100%"><%= t "devise.invitations.new.header" %></h2>

<% if notice  %>
	<div class="alert alert-danger" style="width:70%;margin:10px auto;height:auto !important;text-align:center;">
	<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  	<div class="notice" style="padding:0px !important"><i class="glyphicon glyphicon-exclamation-sign"></i> <%= notice %></div>
</div>
<%end%>

<div id="login" class="container">
  <div class="row-fluid">
    <div class="span12">
      <div class="login well well-small">
        <div class="center"> 
      <%= image_tag("logo-no2.png") %>
        </div>

<%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post} do |f| %>
          <div class="control-group">
            <div class="input-prepend">
              <span class="add-on"><i class="icon-user"></i></span>
            <% resource.class.invite_key_fields.each do |field| -%>
  				<%= f.input field %>
			<% end -%>
            </div>
          </div>
          <div class="control-group">
              <%= f.button :submit, t("devise.invitations.new.submit_button", class:"btn btn-primary btn-large btn-block") %>
          </div>
          <%= link_to "Back", :back %>
        <%end%>
      </div><!--/.login-->
    </div><!--/.span12-->
  </div><!--/.row-fluid-->
</div><!--/.container-->